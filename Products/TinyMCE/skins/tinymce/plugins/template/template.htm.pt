<html xmlns="http://www.w3.org/1999/xhtml" i18n:domain="tinymce">
<head>
	<title i18n:translate="template_dlg_title"></title>
	<script type="text/javascript" src="../../tiny_mce_popup.js"></script>
	<script type="text/javascript" src="js/template.js"></script>
	<link href="css/template.css" rel="stylesheet" type="text/css" />
</head>
<body onresize="TemplateDialog.resize();">
	<form onsubmit="TemplateDialog.insert();return false;">
		<div id="frmbody">
			<div class="title" i18n:translate="template_dlg_desc"></div>
			<div class="frmRow"><label for="tpath" i18n:attributes="title template_dlg_select" i18n:translate="template_dlg_label"></label>
			<select id="tpath" name="tpath" onchange="TemplateDialog.selectTemplate(this.options[this.selectedIndex].value, this.options[this.selectedIndex].text);" class="mceFocus">
				<option value="" i18n:translate="template_dlg_select"></option>
			</select>
			<span id="warning"></span></div>
			<div class="frmRow"><label for="tdesc" i18n:translate="template_dlg_desc_label"></label>
			<span id="tmpldesc"></span></div>
			<fieldset>
				<legend i18n:translate="template_dlg_preview"></legend>
				<iframe id="templatesrc" name="templatesrc" src="blank.htm" width="690" height="400" frameborder="0"></iframe>
			</fieldset>
		</div>

		<div class="mceActionPanel">
			<div class="left">
				<input type="submit" id="insert" name="insert" i18n:attributes="value common_insert" />
			</div>

			<div class="right">
				<input type="button" id="cancel" name="cancel" i18n:attributes="value common_cancel" onclick="tinyMCEPopup.close();" />
			</div>

			<br class="clearboth" />
		</div>
	</form>
</body>
</html>
