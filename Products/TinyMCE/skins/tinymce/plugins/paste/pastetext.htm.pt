<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html id="region-content" xmlns="http://www.w3.org/1999/xhtml" i18n:domain="tinymce">
<head>
	<title i18n:translate="paste_paste_text_desc"></title>
	<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
	<script type="text/javascript" src="../../tiny_mce_popup.js"></script>
	<script type="text/javascript" src="js/pastetext.js"></script>
    <link rel="stylesheet" type="text/css" href="css/pastetext.css">

</head>
<body>
	<div class="dialog-wrapper">
		<form name="source" onsubmit="return PasteTextDialog.insert();" action="#">
			<fieldset>
				<legend i18n:translate="paste_paste_text_desc"></legend>
				<div class="field">
					<label for="htmlSource" i18n:translate="paste_paste_text_desc"></label>
					<div class="formHelp" i18n:translate="paste_dlg_text_title"></div>
					<div class="widget">
						<textarea  id="content" name="content" rows="15" cols="100" wrap="soft" class="mceFocus"></textarea>
					</div>
				</div>

				<div class="field">
					<div class="widget">
						<input name="linebreaks" id="linebreaks" checked="checked" type="checkbox">
						<label for="noshade" i18n:translate="paste_dlg_text_linebreaks"></label>
					</div>
				</div>
			</fieldset>

			<div class="visualClear"><!-- --></div>

			<div class="mceActionPanel formControls">
				<span class="actionButtons">
					<input type="submit" id="insert" class="context" name="insert" i18n:attributes="value common_insert" />
					<input type="button" id="cancel" class="standalone" name="cancel" i18n:attributes="value common_cancel" onclick="tinyMCEPopup.close();" />
				</span>
			</div>
		</form>
	</div>
</body>
</html>