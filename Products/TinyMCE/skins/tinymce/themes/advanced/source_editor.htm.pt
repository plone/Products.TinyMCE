<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" i18n:domain="tinymce">
  <head>
	<title i18n:translate="advanced_dlg_code_title"></title>
	<script type="text/javascript" src="../../tiny_mce_popup.js"></script>
	<script type="text/javascript" src="js/source_editor.js"></script>

  </head>
  <body onresize="resizeInputs();">
	<div class="dialog-wrapper" id="content">
	  <form name="source" onsubmit="saveContent();return false;" action="#">
		<fieldset>
		  <legend for="htmlSource" i18n:translate="advanced_dlg_code_title"></legend>
		  <div class="field">
			<div class="widget">
			  <textarea name="htmlSource" id="htmlSource" rows="18" cols="100" style="" wrap="off" class="mceFocus"></textarea>
			</div>
		  </div>

		  <div class="field">
			<div class="widget">
			  <input name="wraped" id="wraped" onclick="toggleWordWrap(this);" checked="checked" type="checkbox" />
			  <label for="wraped" i18n:translate="advanced_dlg_code_wordwrap"></label>
			</div>
		  </div>
		</fieldset>

		<div class="visualClear"><!-- --></div>

		<div class="mceActionPanel formControls">
		  <span class="actionButtons">
			<input type="submit" id="insert" class="context" name="insert" i18n:attributes="value common_update" />
			<input type="button" id="cancel" class="context" name="cancel" i18n:attributes="value common_cancel" onclick="tinyMCEPopup.close();" />
		  </span>
		</div>
	  </form>
	</div>
  </body>
</html>
